<%= form_tag user_available_path(@user) do %>
  <label>Check-in date: </label>
  <%= select_date(Date.today, order: [:month, :day, :year], prefix: :'booking[checkin]') %><br>
  <label>Check-out date: </label>
  <%= select_date Date.today, order: [:month, :day, :year], prefix: :'booking[checkout]' %><br>
  <label>Number of guests: </label>
  <%= text_field_tag :'booking[group_size]' %><br>
  <%= submit_tag "See available rooms" %>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(function () {
    $('form').submit(function(event) {
      event.preventDefault();
      alert("Grabbed the submit button");
    });
  });
</script>
